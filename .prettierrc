{
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "plugins": [
        "prettier-plugin-svelte",
        "prettier-plugin-organize-imports",
        "prettier-plugin-tailwindcss",
        "@prettier/plugin-php"
    ],
    "overrides": [
        {
            "files": ["*.svelte", "*.js"],
            "options": {
                "parser": "svelte"
            }
        }
    ]
}
